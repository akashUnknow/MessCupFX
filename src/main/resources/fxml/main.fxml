<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.akash.messcup.controllers.MainController">

    <stylesheets>
        <URL value="@../style/main.css" />
    </stylesheets>

    <!-- Main Container -->
    <VBox alignment="TOP_CENTER" spacing="20" styleClass="vbox" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <HBox alignment="CENTER" prefHeight="200.0" prefWidth="600.0" spacing="50">

            <!-- Image -->
            <ImageView fx:id="cardImage" fitHeight="170" fitWidth="120" preserveRatio="true" styleClass="image-view">
                <Image url="@images/card.jpg" />
            <HBox.margin>
               <Insets left="350.0" />
            </HBox.margin>
            </ImageView>

            <!-- Add a flexible space between image and table -->
            <Region HBox.hgrow="ALWAYS" />

            <!-- Table -->
            <TableView prefHeight="170.0" prefWidth="300.0" fx:id="menuTime">
                <columns>
                    <TableColumn prefWidth="150.0" text="Meal" fx:id="meal" />
                    <TableColumn prefWidth="150.0" text="Time" fx:id="time" />
                </columns>
            <HBox.margin>
               <Insets right="350.0" />
            </HBox.margin>
            </TableView>
        </HBox>



        <!-- ID Section -->
        <VBox alignment="CENTER_LEFT" spacing="10" VBox.vgrow="NEVER">
            <Text styleClass="header" text="ID" />
            <ChoiceBox fx:id="idChoiceBox" maxWidth="200" styleClass="choice-box" />
            <TextField fx:id="idField" maxWidth="200" promptText="Enter ID" styleClass="text-field" />
        </VBox>
        <Text fx:id="errorMessage" styleClass="error-text" text="" wrappingWidth="400" VBox.vgrow="NEVER" />

        <!-- Two-Column Section -->
        <HBox alignment="CENTER" spacing="30" VBox.vgrow="ALWAYS">

            <VBox alignment="CENTER_LEFT" spacing="10" HBox.hgrow="ALWAYS">
                <Text styleClass="header" text="Employee Name" />
                <TextField fx:id="empNameField" disable="true" maxWidth="Infinity" promptText="Employee Name" styleClass="text-field" />
            </VBox>

            <VBox alignment="CENTER_LEFT" spacing="10" HBox.hgrow="ALWAYS">
                <Text styleClass="header" text="Employee ID" />
                <TextField fx:id="empIdField" disable="true" maxWidth="Infinity" promptText="Employee ID" styleClass="text-field" />
            </VBox>

        </HBox>
        <Text fx:id="thanksMessage" styleClass="Thank-text" text="" wrappingWidth="400" VBox.vgrow="NEVER" />

        <!-- Meal Time -->
        <VBox alignment="CENTER_LEFT" spacing="10" VBox.vgrow="NEVER">
            <Text styleClass="header" text="Meal Time" />
            <ChoiceBox fx:id="mealTimeChoice" disable="true" maxWidth="Infinity" styleClass="choice-box" />
        </VBox>

        <!-- Summary -->
        <!-- Summary + Menu Side by Side -->
        <HBox alignment="TOP_CENTER" spacing="40" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">

            <!-- Summary Section -->
            <VBox alignment="CENTER_LEFT" spacing="5" HBox.hgrow="ALWAYS">
                <Text fx:id="summaryEmpName" styleClass="summary-text" text="Employee Name" />
                <Text fx:id="summaryEmpId" styleClass="summary-text" text="Employee ID" />
                <Text fx:id="summaryMeal" styleClass="summary-text" text="Meal Time" />
                <Text fx:id="summaryCount" styleClass="summary-text" text="Number of coupons used per day" />
            </VBox>

            <!-- Menu Table Section -->
            <VBox alignment="CENTER_LEFT" spacing="10" HBox.hgrow="ALWAYS">
                <Text styleClass="header" text="Today's Menu" />

                <TableView fx:id="menuTable">

                    <columns>
                        <TableColumn fx:id="day" prefWidth="150" text="Day" />
                        <TableColumn fx:id="breakfast" prefWidth="100" text="Breakfast" />
                        <TableColumn fx:id="lunch" prefWidth="100" text="Lunch" />
                        <TableColumn fx:id="dinner" prefWidth="100" text="Dinner" />
                    </columns>
                </TableView>
            </VBox>

        </HBox>

        <Button fx:id="exportPdfButton" maxWidth="200" onAction="#exportPdf" styleClass="pdf-button" text="Export to PDF" />

    </VBox>

</AnchorPane>
